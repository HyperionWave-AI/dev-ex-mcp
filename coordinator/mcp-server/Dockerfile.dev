# Development Dockerfile with Air hot-reload
FROM golang:1.23-alpine

WORKDIR /app

# Install Air for hot-reload
RUN go install github.com/air-verse/air@latest

# Copy go mod files
COPY go.mod go.sum ./
RUN go mod download

# Copy source code
COPY . .

# Expose MCP port
EXPOSE 7778

# Run with Air for hot-reload
CMD ["air", "-c", ".air.toml"]
