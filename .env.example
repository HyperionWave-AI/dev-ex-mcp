# Hyperion Coordinator MCP Configuration
# Copy this file to .env and fill in your values

# ========================================
# PORTS
# ========================================
# Web UI Port
WEB_PORT=7777

# MCP Server Port (HTTP mode)
MCP_PORT=7778

# HTTP Bridge Port (REST API wrapper for MCP)
BRIDGE_PORT=7779

# MongoDB Port (for local development)
MONGODB_PORT=27017

# Qdrant Ports (for local development)
QDRANT_HTTP_PORT=6333
QDRANT_GRPC_PORT=6334

# ========================================
# MONGODB
# ========================================
# MongoDB Connection URI
# For local development (default): mongodb://mongodb:27017
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
MONGODB_URI=mongodb://mongodb:27017

# MongoDB Database Name
MONGODB_DATABASE=coordinator_db

# MongoDB Root Credentials (local development only)
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=admin123

# ========================================
# QDRANT VECTOR DATABASE
# ========================================
# Qdrant URL
# For local development (default): http://qdrant:6333
# For Qdrant Cloud: https://your-cluster.qdrant.io:6333
QDRANT_URL=http://qdrant:6333

# Qdrant API Key (leave empty for local development)
QDRANT_API_KEY=

# ========================================
# OPENAI (for embeddings)
# ========================================
# OpenAI API Key (required for vector embeddings)
OPENAI_API_KEY=

# ========================================
# APPLICATION
# ========================================
# Log Level
# Options: debug, info, warn, error
LOG_LEVEL=info

# Frontend MCP Bridge URL
# For local development: http://localhost:7779
VITE_MCP_BRIDGE_URL=http://localhost:7779
